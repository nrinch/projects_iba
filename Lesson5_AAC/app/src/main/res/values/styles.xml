<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreenGray</item>
        <item name="colorPrimaryDark">@color/colorGreenGrayDark</item>
        <item name="colorAccent">@color/colorBeige</item>
    </style>
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
       <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
</resources>